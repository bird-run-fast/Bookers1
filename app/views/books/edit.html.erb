
<div class = "edit-body">
<h1>Editing Book</h1>
<br>

<% if @book.errors.any?%>
  <h3>error</h3>
  <% @book.errors.full_messages.each do |m|%>
    <li><%= m %></li>
  <% end %>
<% end %>

<%= form_for(@book, url:book_path(@book.id)) do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "Update Book"%>
  <br>
  <br>
  <%= link_to "show",book_path(@book.id), class:"curd-link"%>
  <%= link_to "back","/books", class:"curd-link"%>
<% end %>
</div>

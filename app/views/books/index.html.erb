
<div class="index-body">

  <h1>Books</h1>
  <table border = "0">

    <tr class= table-head>
      <th>title</th>
      <th>body</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id), class: "curd-link" %></td>
      <td><%= link_to "edit", edit_book_path(book.id), class: "curd-link" %></td>
      <td><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "are you sure?", class: "curd-link" %></td>
    </tr>
    <% end %>

  </table>
  <br>
  <h1>New book</h1>


  <%= form_for(@book, url: "/books") do |f| %>
  <% if @book.errors.any?%>
    <h3>error</h3>
    <% @book.errors.full_messages.each do |m|%>
      <li><%= m %></li>
    <% end %>
  <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Create Book" %>
  <% end %>

</div>
